<%= form_tag user_registration_path do %>
  <div class="form-group">

    <% if action_name == 'edit' %>
      <div class="form-group">
      <%= label_tag "Education" %>
      <%= select_tag "education", options_for_select(EDUCATION_LEVELS, EDUCATION_LEVELS.first), class: 'form-control'  %>
      </div>

      <div class="form-group">
      <%= label_tag "Age" %>
      <%= number_field_tag "age", class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= label_tag "Profession" %>
      <%= select_tag "profession", options_for_select(PROFESSION, PROFESSION.first), class: 'form-control'  %>
      </div>

      <div class="form-group">
      <%= label_tag "Nationality" %>
      <%= select_tag "nationality", options_for_select(NATIONALITY, NATIONALITY.first), class: 'form-control'  %>
      </div>

      <div class="form-group">
      <%= label_tag "gender" %>
      <%= select_tag "sex", options_for_select(SEX, SEX.first), class: 'form-control' %>
      </div>

    <% elsif action_name == 'new' %>

      <div class="form-group">
            <%= label_tag "Email" %>
            <%= text_field_tag "email", nil, class: 'form-control'%>
      </div>

      <div class="form-group">
            <%= label_tag "Password" %>
            <%= text_field_tag "password", nil, class: 'form-control' %>
      </div>

      <div class="form-group">
            <%= label_tag "Password confirmation" %>
            <%= text_field_tag "password_confirmation", nil, class: 'form-control' %>
      </div>

      <%= hidden_field_tag "user_type", "tester" %>
      <%#= f.input :photo, as: :file %>

    <!--           f.input :photo, as: :file -->
    <!--           f.input :availability -->
    <% end %>
    <%= submit_tag "Submit" %>
  </div>
<% end %>

