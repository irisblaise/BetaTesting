
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path  do %>
    <%= image_tag "beta_testing_logo.png"%>
    <% end %>
    <%= link_to "Our Customers", "#" , class: "toplinks nav-link" %>
    <%= link_to "Our Solution", "#", class: "toplinks nav-link" %>
    <%= link_to "Our Guarantee", "#", class: "toplinks nav-link" %>
    <%= link_to "About Us", "#", class: "toplinks nav-link" %>
    <%= link_to "Help & Support", "#", class: "toplinks nav-link" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.tester.photo.attached? ? current_user.tester.photo.key : "injcuuecln8fvf2vo2zg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, :cloud_name => "dir0nw4ok"%>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.is_tester? %>
            <%= link_to "Dashboard", '#', class: "dropdown-item" %>
            <% elsif current_user.is_startup? %>
            <%= link_to "Dashboard", '#', class: "dropdown-item" %>
            <%end  %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-primary text-white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
